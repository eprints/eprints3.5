<?xml version="1.0" encoding="utf-8"?>

<workflow xmlns="http://eprints.org/ep3/workflow" xmlns:epc="http://eprints.org/ep3/control">

  <flow>
    <stage ref="default"/>
  </flow>
   
  <stage name="default">
    <component id="c_spec" type="XHTML" surround="None"><div class="ep_block"><p><epc:print expr="spec" /></p></div></component>

    <component id="c_name"><field ref="name"/></component>

    <!-- see https://github.com/eprints/eprints/issues/169 - can be removed when this issue fixed -->
    <epc:if test="substr(spec.as_string(),0,30) = '?plugin=Xapian&amp;searchid=simple' or substr(spec.as_string(),0,33) = '?plugin=Xapianv2&amp;searchid=simple2'">
      <component id="c_xapian_warning" type="XHTML"><epc:phrase ref="saved_search_xapian_warning"/></component>
    </epc:if>

    <component id="c_saved_search_mail" type="Field::Multi">
      <title><epc:phrase ref="saved_search_mail" /></title>
      <field ref="frequency"/>
      <field ref="mailempty"/>
    </component>

    <component id="c_public"><field ref="public"/></component>

  </stage>
</workflow>
